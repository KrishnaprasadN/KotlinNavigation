<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainFragment">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Show First"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/first" android:layout_margin="30dp"/>
        <Button
                android:text="Show Second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/second" android:layout_margin="30dp"/>
    </LinearLayout>
</FrameLayout>